<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="114dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/module_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="Hello"
                    android:textColor="#222"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/module_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="World"
                    android:textColor="#666"
                    android:textSize="14dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentRight="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:paddingRight="5dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:src="@drawable/resume"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <ImageButton
                    android:layout_width="124sp"
                android:layout_weight="1"
                    android:layout_height="31dp"
                    android:src="@drawable/intro"
                    android:scaleType="fitXY"
                    android:background="#00ffffff"
                android:layout_gravity="bottom"
                android:paddingRight="5dp"
                android:id="@+id/intro_button" />

            <ImageButton
                android:layout_width="124sp"
                android:layout_weight="1"
                android:layout_height="31dp"
                android:src="@drawable/revision"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="bottom|right"
                android:paddingLeft="5dp"
                android:id="@+id/revision_button" />

            <ImageButton
                    android:layout_width="124sp"
                android:layout_weight="1"
                    android:layout_height="31dp"
                    android:src="@drawable/exercises"
                    android:scaleType="fitXY"
                    android:background="#00ffffff"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/exercises_button" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>