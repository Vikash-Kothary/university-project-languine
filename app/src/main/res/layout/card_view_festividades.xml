<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/festividad_thumbnail"
            android:layout_width="251dp"
            android:layout_height="251dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:padding="@dimen/activity_horizontal_margin"
            android:paddingRight="5dp"
            android:layout_above="@+id/spanish_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="8dp"
            android:text="Date"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/spanish_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/spanish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="8dp"
            android:text="spanish name"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/spanish_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="8dp"
            android:text="english name"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/spanish_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/english_name"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="153dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:id="@+id/linearLayout">

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:src="@drawable/resume"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>