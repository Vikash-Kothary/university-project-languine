<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puzzle.appname">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LessonSelectActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExerciseMenuActivity"
            android:label="@string/title_activity_exercise_menu"
            android:parentActivityName=".LessonSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.puzzle.appname.LessonSelectActivity" />
        </activity>
        <activity
            android:name=".ExerciseActivity"
            android:label="@string/title_activity_exercise"
            android:parentActivityName=".ExerciseMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.puzzle.appname.ExerciseMenuActivity" />
        </activity>
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName=".LessonSelectActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.puzzle.appname.LessonSelectActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".LessonSelectActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.puzzle.appname.LessonSelectActivity" />
        </activity>
        <activity
            android:name=".MultipleChoice"
            android:parentActivityName=".LessonSelectActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AudioQuiz"
            android:label="@string/title_activity_content_audio_quiz"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Glossary"
            android:label="@string/title_activity_glossary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MediaPlayer"
            android:label="@string/title_activity_media_player"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".MusicService" />

        <activity
            android:name=".GetStarted"
            android:label="@string/title_activity_get_started"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Exercises"
            android:label="@string/title_activity_exercises"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
